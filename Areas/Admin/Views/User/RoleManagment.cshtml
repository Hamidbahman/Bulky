@using Bulky.Models.ViewModels
@using Bulky.Utility
@model RoleManagmentVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Manage User Role</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="RoleManagement" method="post" class="row">
            <input asp-for="ApplicationUser.Id" hidden />

            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Name" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Name" class="ms-2"></label>
                    <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select" id="RoleDropdown">
                        <option value="">-- Select Role --</option>
                    </select>
                </div>

                @* Company selection dropdown, hidden by default *@
                <div class="form-floating py-2 col-12" id="CompanyDropdown" style="display: none;">
                    <select asp-for="ApplicationUser.CompanyId" asp-items="@Model.CompanyList" class="form-select">
                        <option value="">-- Select Company --</option>
                    </select>
                    <label asp-for="ApplicationUser.CompanyId" class="ms-2"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update Role</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>











@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script>
        $(document).ready(function () {
            // Show or hide Company dropdown based on selected role
            function toggleCompanyDropdown() {
                var selectedRole = $('#RoleDropdown').val();
                if (selectedRole === '@SD.Role_Company') {
                    $('#CompanyDropdown').show();
                } else {
                    $('#CompanyDropdown').hide();
                }
            }

            // Initial check on page load
            toggleCompanyDropdown();

            // Check whenever the role dropdown changes
            $('#RoleDropdown').change(function () {
                toggleCompanyDropdown();
            });
        });
    </script>
}
